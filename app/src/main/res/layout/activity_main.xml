<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edit_cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CPF"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/edit_nome"
        />

    <EditText
        android:id="@+id/edit_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RG"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/edit_cpf"
        />

    <EditText
        android:id="@+id/edit_nasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nascimento"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/edit_rg"
        />

    <EditText
        android:id="@+id/edit_fone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fone 1"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/edit_nasc"
        />

    <EditText
        android:id="@+id/edit_fone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fone 2"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/edit_fone1"
        />

    <EditText
        android:id="@+id/edit_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CEP"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/edit_fone2"
        />

    <EditText
        android:id="@+id/edit_rua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rua"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/edit_cep"
        />

    <EditText
        android:id="@+id/edit_plano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plano"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/edit_rua"
        />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/edit_plano"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Cadastrar"
        android:textColor="@color/white"
        android:background="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_email"
        app:layout_constraintVertical_bias="0.2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
